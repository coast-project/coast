        'targetType'       : 'ProgramTest',
        'copyFiles'        : [
            (SConsider.findFiles(['.'], ['.any']), S_IRUSR | S_IRGRP | S_IROTH, searchReplace),
            (SConsider.findFiles(['.'], ['.txt', '.tst']), S_IRUSR | S_IRGRP | S_IROTH),
            (SConsider.findFiles(['config'], ['.sh']), S_IRUSR | S_IRGRP | S_IROTH | S_IXUSR),
        ],
        'runConfig'        : {
            'setUp'        : setUp,
            'tearDown'     : tearDown,

{
	/ResolvableHost {
		/name		"##RESOLVABLEHOSTFQDN##"
		/ip			"##RESOLVABLEHOSTIP##"
	}
	/simpleDNS2IPTest {
		/localhost {
			/name	"localhost"
			/ip		"127.0.0.1"
		}
		/resolvableHost {
			/name	%ResolvableHost.name
			/ip		%ResolvableHost.ip
		}
		/noHostToBeFound {
			/name	"NotExisting.Nowhere.NoDomain"
			/ip		"127.0.0.1"
		}
	}
	/simpleIP2DNSTest {
		/localhost {
			/name	"localhost"
			/ip		"127.0.0.1"
		}
	}
	/SocketConnectSuccessHost {
		/ip			"127.0.0.1"
		/port		9876
		/timeout	50		# in ms
	}
	/SocketConnectTimeoutHost {
		# use some non-existing IP in your LAN!
		# found on http://www.developerweb.net/forum/archive/index.php/t-3608.html
		/ip 		"192.167.121.212"
		/port		12345
		/timeout	10
	}
	/SocketNotAcceptingHost %SocketConnectTimeoutHost
	/HTTPReplyHost {
		/name		"127.0.0.1"
		/port		9875
		/timeout	10
	}
	/SocketConnectButNoSendRecv  {
		/ip			"127.0.0.1"
		/port		9874
		/timeout	100		# in ms
	}
}

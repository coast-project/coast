{
	# The following temporary directory must already exist and will be used to create and delete subdirectories from within tests
	/TmpDir			"/tmp"
#	/TmpDir			"c:/temp"					# cygwin
	/BlocksLeftOnFSTest {
		/FS			"/"
#		/FS			"c:/"						# cygwin
	}
	/MakeDirectoryTest {
		/BasePath	"/tmp/MKDIRTEST"
#		/BasePath	"c:/temp/MKDIRTEST"			# cygwin
		/MaxNumDirs	30
	}
	/SymbolicLinkTest {
		/OnelevelExtendedTest {
			/BaseDir			%TmpDir
			/PathToCreate		"MyTestDir"
			/Link				"TestLink1"
		}
	}
	/MakeDirectoryExtendTest {
		/OnelevelExtendedTest {
			/BaseDir			"/tmp/dirextension/test"
			/ExpectedBaseDir	"/tmp/dirextension/test_ex0"
			/PathToCreate		"TestCaseDir1"
			##NUMHARDLINKS##
		}
		/MutlilevelExtendedTest {
			/BaseDir			"/tmp/dirextension/test"
			/ExpectedBaseDir	"/tmp/dirextension/test_ex0"
			/PathToCreate		"TestCaseSubDir1/TestCaseSubDir2"
			##NUMHARDLINKS##
		}
		/OnelevelExtendedExistTest {
			/EnsureDirExists	"/tmp/dirextension/test_ex0/ExistingDir"
			/BaseDir			"/tmp/dirextension/test"
			/ExpectedBaseDir	"/tmp/dirextension/test_ex0"
			/PathToCreate		"ExistingDir/SubDir"
			##NUMHARDLINKS##
		}
	}
}

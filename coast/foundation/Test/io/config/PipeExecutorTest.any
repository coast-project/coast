{
	/CatWorkingDirTest {
		/WorkingDir	"./io/config"
	}
	/ShellInvocationTest {
		/NonExistingShellTest {
			/Params {
#				/Executable	"noShell.exe"			#cygwin
				/Executable	"/bin/noshell"
				/Env 		*
				/Path		"."
				/Timeout	1000
				/UseStderr	1
				/Command	"./io/config/testscript.sh -p gaga"
			}
			/Expected {
				/ExecOk 0
				/Output	""
				/Error	""
			}
		}
		/SimpleKshDefaultEnvTest {
			/Params {
#				/Executable	"bash.exe"			# cygwin
				/Executable	"/bin/sh"
				/Path		"."
				/Timeout	1000
				/UseStderr	1
				/Command	"./io/config/testscript.sh -p gaga"
			}
			/Expected {
				/ExecOk	1
				/Output	"Params [-p gaga]\n"
				/Error	""
			}
		}
		/SimpleKshDifferentPathTest {
			/Params {
#				/Executable	"bash.exe"			# cygwin
				/Executable	"/bin/sh"
				/Env 		*
				/Path		"./io/config"
				/Timeout	1000
				/UseStderr	1
				/Command	"./testscript.sh -p gaga"
			}
			/Expected {
				/ExecOk	1
				/Output	"Params [-p gaga]\n"
				/Error	""
			}
		}
	}
}

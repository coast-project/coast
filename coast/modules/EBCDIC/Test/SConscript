import SConsider, pdb

progEnv = SConsider.CloneBaseEnv()

targetname='EBCDIC_Test'
SConsider.DependsOn(progEnv, 'CoastEBCDIC')
SConsider.DependsOn(progEnv, 'CoastMTFoundation')
SConsider.DependsOn(progEnv, 'testfwFoundation')
createdProgram = progEnv.Program(targetname, SConsider.listFiles(['*.cpp']))
progEnv.Tool('registerObjects', package=targetname, testApps=[createdProgram], config=SConsider.listFiles(['config/*.any', 'config/*.txt', 'config/*.tst', 'config/testscript.sh', 'config/prjconfig.sh', 'tmp/*.any']))


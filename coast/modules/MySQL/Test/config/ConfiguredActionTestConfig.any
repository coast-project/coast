{
	/DLL {
	}
	/Modules {
		DataAccessImplsModule
		MappersModule
		ActionsModule
	}

	/Actions {
		/CallDataAccessAction	{ CallDA }
	}
	/DataAccessImpls {
		/MySQLDAImpl {
			/SelectTest {
				SelectTestWithoutQueryCount WrongPasswordTest
			}
			InsertTest DeleteTest
			SQLErrorTest WrongPortTest WrongHostTest
		}
	}
	/Mappers {
		/Input {
			/Mapper {
				SelectTest SelectTestWithoutQueryCount
				InsertTest DeleteTest WrongPasswordTest
				SQLErrorTest WrongPortTest WrongHostTest
			}
		}
		/Output {
			/NameUsingOutputMapper {
				SelectTest SelectTestWithoutQueryCount
				InsertTest DeleteTest WrongPasswordTest
				SQLErrorTest WrongPortTest WrongHostTest
			}

		}
	}

######## Test specific section ########

	/TestCases {
		/InsertTest {
			/TmpStore {
				/Host		!Defaults.any?MySQL.Server
				/Database	!Defaults.any?MySQL.Database
				/MySQLUser	!Defaults.any?MySQL.Username
				/MySQLPW	!Defaults.any?MySQL.Password
			}
			/TheAction {
				/CallDA 	InsertTest
			}
			/Result {
				/TmpStore {
					/InsertTest	{
						/QueryResult	*
					}
				}
			}
		}
		/DeleteTest {
			/TmpStore {
				/Database	!Defaults.any?MySQL.Database
			}
			/TheAction {
				/CallDA	DeleteTest
			}
			/Result {
				/TmpStore {
					/DeleteTest	 {
						/QueryResult	*
					}
				}
			}
		}
		/SelectTest {
			/TmpStore {
				/Database	!Defaults.any?MySQL.Database
			}
			/TheAction {
				/CallDA		SelectTest
			}
			/Result {
				/TmpStore {
					/SelectTest {
						/QueryCount 3
						/QueryResult	{
							/"0" {
								/Name	"Test"
								/Number "1"
							}
							/"1" {
								/Name	"MySQL"
								/Number "2"
							}
							/"2" {
								/Name	"Now"
								/Number "33"
							}
						}
					}
				}
			}
		}
		/SelectTestWithoutQueryCount {
			/TmpStore {
				/Database	!Defaults.any?MySQL.Database
			}
			/TheAction {
				/CallDA		SelectTestWithoutQueryCount
			}
			/Result {
				/TmpStore {
					/SelectTestWithoutQueryCount {
						/QueryResult	{
							/"0" {
								/Name	"Test"
								/Number "1"
							}
							/"1" {
								/Name	"MySQL"
								/Number "2"
							}
							/"2" {
								/Name	"Now"
								/Number "33"
							}
						}
					}
				}
			}
		}
		/SQLErrorTest {
			/TmpStore {
				/Database	!Defaults.any?MySQL.Database
			}
			/TheAction {
				/CallDA SQLErrorTest
			}
			/ExpectedResult	0
			/Result {
				/TmpStore {
					/SQLErrorTest	{
						/Error "Query failed Column 'Name' cannot be null"
					}
				}
			}
		}
		/WrongPortTest {
			/TmpStore {
				/Database	!Defaults.any?MySQL.Database
			}
			/TheAction {
				/CallDA WrongPortTest
			}
			/ExpectedResult	0
			/Result {
				/TmpStore {
				}
			}
		}
		/WrongHostTest {
			/TmpStore {
				/Database	!Defaults.any?MySQL.Database
			}
			/TheAction {
				/CallDA WrongHostTest
			}
			/ExpectedResult	0
			/Result {
				/TmpStore {
					/WrongHostTest	{
						/Error "Couldn't connect to mySQL engine! Unknown MySQL Server Host 'some.nonexistent.loc' (1)"
					}
				}
			}
		}
		/WrongPasswordTest {
			/TmpStore {
				/Database	!Defaults.any?MySQL.Database
				/MySQLUser	!Defaults.any?MySQL.Username
				/MySQLPW	!Defaults.any?MySQL.FaultyPassword
			}
			/TheAction {
				/CallDA WrongPasswordTest
			}
			/ExpectedResult	0
			/Result {
				/TmpStore {
				}
			}
		}
	}
}

{
	/DLL {
		CoastAppLog
		CoastDataAccess
		CoastRenderers
		CoastOracle
	}
	/Modules {
		ActionsModule
		RenderersModule
		OracleModule
		DataAccessImplsModule
		MappersModule
		AppLogModule
		ServersModule
	}

	/Servers {}
	# uncomment the server slot for enabling TimeLogging
	/Server	Server

	/Actions {
		/CallDataAccessAction	{ CallDA }
	}
	/Renderers {
		/SwitchRenderer 		{ Switch }
		/ContextLookupRenderer 	{ Lookup }
	}
	/OracleModule {
		/ConnectionPool {
			/ParallelQueries		10
			/CloseConnectionTimeout	20
		}
	}

	/DataAccessImpls {
		/OracleDAImpl {
			/SifsCoastOrcl {
				MultiThreadedDA
				MultiThreadedDAWithError
			}
		}
	}

	/Mappers {
		/Input {
			/OracleParameterMapper {
				/SifsCoastOrclSP {
					MultiThreadedDA
					MultiThreadedDAWithError
				}
			}
		}
		/Output {
			/OracleResultMapper {
				/SifsCoastOrcl {
					MultiThreadedDA
					MultiThreadedDAWithError
				}
			}
		}
	}

######## Test specific section ########

	/DAImplTest {
		#---- Worker pool configurations
		/ThreadPoolSize					20
		/PoolStorageSize				2000
		/NumOfPoolBucketSizes			20
		/SuccessDA						MultiThreadedDA
		/FailureDA						MultiThreadedDAWithError
	}
}

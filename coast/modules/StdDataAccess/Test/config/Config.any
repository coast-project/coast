{

#--- Server configuration ----------------------------------------------------
	/Server				{ "MasterServer" }		# the server that's in control'
	/port 1234									# default port used by this server
	/ThreadPoolSize		50						# number of parallel pending requests

#--- some experimental stuff -----------------------------------------------
	/DLL {
		security
	}
	/ServerModules {
		{
			/ServerName				"HTTPServer"
		}
		{
			/ServerName				"EchoServer"
		}
	}

#--- Modules ------------------------------------
	/Modules {
		AccessManagerModule
		SSLModule
		CacheHandlerModule
		SecurityModule
		DataAccessImplsModule
		ActionsModule
		MappersModule
		RolesModule
		PagesModule
	}
	/SecurityModule {
		/Scrambler	BlowfishScrambler
		/Encoder	Base64
		/Signer		MD5Signer
	}

	/Roles	{	/Role	{ TestRole	} }
	/Pages	{	/Page	{ TestPage	} }
#--- AccessManagerModule configuration --------------------------------------
	/AccessManagers {
		/MockAccessManager {
			AuthenticationServiceAccessManager
		}
	}
	/DefaultAccessManager	MockAccessManager

#--- ServiceHandlersModule configuration ---------------------------------------
	/ServiceHandlers {
		/SimpleDataAccessService {
			HttpFile
		}
		/AuthenticationService {
			AuthFile
		}
	}

	/DataAccessImpls {
		/MailDAImpl {
			TestMail
		}
		/CgiCaller {
			CgiExecTest
		}
	}

	/Mappers {
		/Input {
			/ParameterMapper {
				TestMail
			}
			/CgiParams { CgiExecTest }
		}
		/Output {
			/ResultMapper {
				TestMail
				ExecTestOut
				CgiExecTest
			}
		}
	}
	/Actions {
		/CallDataAccessAction		{ CallDA }
	}
}

{

	/useSSL {	#mapper for test purposes
		/Output {
			/HTTPMimeHeaderMapper	*
			/HTTPBody {
				/HTTPBodyMapper *
			}
		}
	}

	/ExecTestOut {
		/HTTPBody {
			/HTTPBodyMapper *
		}
	}
	/CgiExecTest {
		/HTTPBody {
			/HTTPBodyMapper *
		}
	}
	/HTTPMimeHeaderMapper { # dummy, but not empty
		/DoNotSplitHeaderFields 1
	}

	/HTTPMimeHeaderMapperDoSplitHeaderFields { # dummy, but not empty
		/DoNotSplitHeaderFields 0
	}

	/HTTPMimeHeaderWithSuppress {
		/Suppress {
			"Connection"
			"server"
		}
	}
	/HTTPMimeHeaderWithAdd {
		/Add {
			/fd-info	"foo"
			/fd-stuff	"bar"
		}
	}
	/HTTPMimeHeaderWithSuppressAndAdd {
		/Suppress {
			"Connection"
		}
		/Add {
			/server			"Coast 2.0"
			/fd-format		"special"
		}
	}
	/HTTPMimeHeaderWithSuppressAndAddNoHeaderFieldSplit {
		/Suppress {
			"Connection"
		}
		/Add {
			/server			"Coast 2.0"
			/fd-format		"special"
		}
		/DoNotSplitHeaderFields 1
	}
}

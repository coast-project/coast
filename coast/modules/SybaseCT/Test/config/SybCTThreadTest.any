{

	/DLL {
		applog
		dataaccess
		renderers
	}
	/Modules {
		ActionsModule
		RenderersModule
		SybaseModule
		DataAccessImplsModule
		MappersModule
		AppLogModule
	}

	# uncomment the server slot for enabling TimeLogging
	/Server	Server

	/Actions {
		/CallDataAccessAction	{ CallDA }
	}
	/Renderers {
		/SwitchRenderer 		{ Switch }
		/ContextLookupRenderer 	{ Lookup }
	}
	/SybaseModule {
		/SybCTnewDAImpl {
			/ParallelQueries		1
			/CloseConnectionTimeout	60
			/InterfacesPathName		"config/interfaces.any"
		}
	}

	/DataAccessImpls {
		/SybCTnewDAImpl {
			/SybNewLocal {
				SybTestThreadnewDA
				SybTestThreadnewDAWithError
			}
		}
	}

	/Mappers {
		/Input {
			/ParameterMapper {
				/SybTestThreadnewDA {
					SybTestThreadnewDAWithError
				}
			}
		}
		/Output {
			/ResultMapper {
				/SybCTnewDAImpl {
					SybTestThreadnewDA
					SybTestThreadnewDAWithError
				}
			}
		}
	}

######## Test specific section ########

	/SybCTnewDAImplTest {
		#---- Worker pool configurations
		/ThreadPoolSize					10
		/PoolStorageSize				2000
		/NumOfPoolBucketSizes			20
		/SybaseModule {
			/SybCTnewDAImpl {
				/ParallelQueries		10
				/CloseConnectionTimeout	60
				/InterfacesPathName		"config/interfaces.any"
			}
		}
	}
}

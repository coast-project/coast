        'targetType'       : 'ProgramTest',
        'copyFiles'        : [(SConsider.findFiles(['config'], ['.any']), S_IRUSR | S_IRGRP | S_IROTH)],
        'public' : {
        },
        'runConfig'        : {
                              'setUp': setUp,
                              'tearDown': tearDown,
                             },
    }
}

SConsider.createTargets( packagename, buildSettings )
